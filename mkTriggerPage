#!/bin/tcsh

echo "building trigger.html..."

set default=200

if ( ! ($?BEAM) ) then
  echo "BEAM env variable not set!"
  setenv BEAM $default
  echo "Defaulting to BEAM=${BEAM}"
endif

set fn="trigger.html"
set mb=`head -n1 mb_select`

touch $fn
rm $fn
touch $fn

