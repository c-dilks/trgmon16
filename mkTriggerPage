echo "<a href=runs.html>Run List</a>" >> $fn
echo "<br /><br /><a href=runlog.root>ROOT file</a>" >> $fn
#echo "<br /><br /><a href=th_plots.pdf>Trigger Thresholds [PDF]</a>" >> $fn
